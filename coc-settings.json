{
    "coc.preferences.colorSupport": true,
    //"coc.preferences.jumpCommand": "split",
    "coc.preferences.rootPatterns": [
        ".vim",
        ".git",
        ".hg",
        ".projections.json",
        ".project/"
    ],
    "coc.preferences.formatOnSaveFiletypes": ["css", "markdown"],
    "coc.preferences.formatOnType": true,
    "coc.preferences.extensionUpdateCheck": "daily",
    // suggest
    "suggest.triggerAfterInsertEnter": true,
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.timeout": 1000, // 超过1s就停止
    "suggest.minTriggerInputLength": 2,
    //"suggest.noselect": false, // 选中第一个
    "suggest.detailField": "abbr",
    "suggest.triggerCompletionWait": 100,
    "suggest.snippetIndicator": " [*]",
    // diagnostic
    //"diagnostic.displayByAle": true,
    // 插入模式也可以使用diagnostic
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.signOffset": 9999999,
	"diagnostic.errorSign": "●",
	"diagnostic.warningSign": "●",
    "diagnostic.displayByAle": false,
    // python
    "python.autoComplete.addBrackets": true,
    "python.trace.server": "verbose",
    "python.jediEnabled": true,
    // vimlsp
    "vimlsp.trace.server": "verbose",
    // highlight
    "highlight.colors.enable": true,
    "highlight.document.enable": true,
    // list
    //"list.maxHeight": 20,
    //"list.previewSplitRight": true,
    //snippet
    "coc.preferences.snippetStatusText": "Ⓢ ",
    //git
    "git.enableGutters": true,
    "git.addGlameToBufferVar": true,
    "git.addGlameToVirtualText": true,
    "git.virtualTextPrefix": "              [commit log]: ",
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "git.addedSign.text": "▎",
    "git.changedSign.text": "▎",
    "git.removedSign.text": "▏",
    "git.topRemovedSign.text": "▔",
    "git.changeRemovedSign.text": "▋",
    // project
    "project.dbpath": "~/cache/.coc-project",
    // emmet
    "emmet.includeLanguages": {"vue-html": "html", "javascript": "javascriptreact"},

    // lsp
    "languageserver": {
        // 安装bash-language-server
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh",
                "bash",
                "zsh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        // 安装ccls
        "ccls": {
            "command": "ccls",
            "trace.server": "verbose",
            "filetypes": [
                "c",
                "cpp",
                "cu",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".clang",
                ".ccls",
                ".vim/",
                ".git/",
                ".hg/",
                ".clang_complete",
                "compile_commands.json",
                "compile_flags.txt"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls-cache"
                }
            }
        },
