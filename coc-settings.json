{
    // preferences
    //"coc.preferences.hoverTarget": "preview", // 使用k进行dohover提示
    "coc.preferences.colorSupport": true,
    "coc.preferences.rootPatterns": [
        ".git",
        ".vim",
        ".projections.json",
        ".project"
    ],
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "python",
        "java",
        "json",
        "c",
        "cc",
        "cu",
        "cpp",
        "go"
    ],
    "coc.preferences.extensionUpdateCheck": "daily", // 插件更新周期
    //"coc.preferences.highlightTimeout": 200, // highlighttime

    // suggest
    "suggest.floatEnable": true, // 关闭悬浮窗口?
    "suggest.triggerAfterInsertEnter": true,
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.timeout": 5000, // 超过500ms就停止
    "suggest.minTriggerInputLength": 1, // 触发补全的字符长度
    "suggest.numberSelect": false, // 使用数字进行选择
    "suggest.noselect": true, // 不选中第一个
    "suggest.detailField": "abbr", // abbr menu preview
    "suggest.triggerCompletionWait": 50, // default 50

    // diagnostic
    // "diagnostic.messageTarget": "echo", // 不是用悬浮进行错误等提示，而是使用echo提示,不好用，使用悬浮比较好
    "diagnostic.refreshOnInsertMode": true, // 插入模式也可以使用diagnostic
    "diagnostic.signOffset": 9999,
    "diagnostic.errorSign": "●",
    "diagnostic.warningSign": "●",
    "diagnostic.infoSign": "●", // ">>",
    "diagnostic.hintSign": "●", // ">>",
    "diagnostic.displayByAle": false,
    "diagnostic.maxWindowHeight": 10, // 窗口最大高度
    // "diagnostic.checkCurrentLine": true, // 光标在当前行就可以显示错误而非错误位置处


	// source
	"coc.source.word.filetypes": ["md", "tex"],
	"coc.source.word.priority": 100,

    // list
    // normal 模式下的快捷键
    //"list.normalMappings": {
    //    "t": "action:tabe",
    //    "v": "action:vsplit",
    //    "s": "action:split",
    //    "d": "expr:GetDeleteAction"
    //},
    //"list.insertMappings": {
    //    "<C-t>": "action:tabe",
    //    "<c-v>": "action:vsplit",
    //    "<c-s>": "action:split",
    //    "<C-w>": "command:wincmd k"
    //},
    "list.maxHeight": 10,
    "list.maxPreviewHeight": 8,
    "list.autoResize": false,
    "list.source.grep.command": "rg",
    //"list.source.grep.defaultArgs": ["-S", "-e"],
    //"list.source.grep.useLiteral": false, // 除非指定正则表达式选项，否则使用文字匹配
    "list.source.lines.defaultArgs": ["-e"],
    "list.source.words.defaultArgs": ["-e"],
    "list.source.files.command": "fd", //文件搜索命令，默认使用find，改成fd，需要安装fd
    "list.source.files.args": ["-j 4"], // 开启4个线程搜索
    "list.source.files.excludePatterns": [".git"], // 忽略搜索的文件列表

    // signature
    "signature.target": "float", // 不使用悬浮进行参数提示而是使用echo提示

    // cursors
    "cursors.cancelKey": "<BackSpace>", // 多光标取消选择快捷键

    // session
    "session.saveOnVimLeave": true,
    "session.directory": "~/.cache/vim/sessions/",

    // python
    "python.autoComplete.addBrackets": true,
    "python.jediEnabled": false, // 需要安装jdei

    // java
    "java.home": "/usr/lib/jvm/default", // 不同的系统需要进行相应的设置

    // highlight
    // "highlight.colors.enable": true,
    // "highlight.document.enable": false,
    "highlight.disableLanguages": ["csv"],

    //snippet
    "snippets.ultisnips.enable": true, // ultisnips 快速跳转
    "snippets.extends": {
        "cpp": ["c"],
        "typescript": ["javascript"]
    },
    "snippets.shortcut": "  Ⓢ",

    //explorer
    "explorer.icon.enableNerdfont": true,
    "explorer.width": 40,
    "explorer.position": "left",
    "explorer.sources": [
        {
            "name": "buffer",
            "expand": true
        },
        {
            "name": "file",
            "expand": true
        }
    ],
    //"explorer.file.autoReveal": true, // 自动扩展到当期buffer
    "explorer.previewAction.onHover": true,
    "explorer.buffer.root.template": "[icon] [title]",
    "explorer.buffer.child.template": "[selection | 1] [bufnr] [name][modified][readonly] [fullpath]",
    "explorer.buffer.child.labelingTemplate": "[name][bufname][fullpath][modified][readonly]",

    "explorer.file.root.template": "[icon] [title] [root] [fullpath]",
    "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent] [icon | 1] [diagnosticError & 1] [filename omitCenter 1][readonly] [linkIcon & 1][link growRight 1 omitCenter 5][size]",
    "explorer.file.child.labelingTemplate": "[fullpath][link][diagnosticWarning][diagnosticError][size][accessed][modified][created][readonly]",
    "explorer.keyMappingMode": "none", // 取消所有默认的映射，使用自己的
    "explorer.keyMappings": {
        "a": "unmap", // 取消按键映射a
        // base
        "k": "nodePrev",
        "j": "nodeNext",
        "h": "collapse",
        "l": ["expandable?", "expand", "open"],
        "L": "expandRecursive",
        "H": "collapseRecursive",

        "v": ["toggleSelection", "normal:j"],
        "V": ["toggleSelection", "normal:k"],
        "*": "toggleSelection",

        // file
        "o": "expandOrCollapse",
        "<cr>": "open",
        "ev": "openInVsplit",
        "eh": "openInHsplit",
        "et": "openInTab",
        "<bs>": "gotoParent",

        "dd": "cutFile",
        "Y": "copyFile",
        "D": "delete",
        "P": "pasteFile",
        "R": "rename",
        "A": "addFile",
        "yy": "copyFilepath",
        "y": "copyFilename",

        ".": "toggleHidden",
        "r": "refresh",
        "<tab>": "actionMenu",

        "?": "help",
        "q": "quit",
        "x": "systemExecute",

        "f": "search",
        "F": "searchRecursive",

        "gf": "gotoSource:file",
        "gb": "gotoSource:buffer",

        "[[": "sourcePrev",
        "]]": "sourceNext",

        "[d": "diagnosticPrev",
        "]d": "diagnosticNext",

        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage"
    },

    //git
    "git.enableGutters": true,
    "git.addGBlameToBufferVar": true,
    "git.addGBlameToVirtualText": true,

    "git.virtualTextPrefix": "  ··· ",
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "git.addedSign.text": "▎",
    "git.changedSign.text": "▎",
    "git.removedSign.text": "▏",
    "git.topRemovedSign.text": "▔",
    "git.changeRemovedSign.text": "▋",

    //prettier
    "prettier.tabWidth": 4,

    // xml
    "xml.java.home": "/usr/lib/jvm/default/",

	// html


    // yank
    "yank.highlight.duration": 200,
    "yank.enableCompletion": false, // 补全中不用yank

	// word

    // lsp
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["--background-index"],
            "trace.server": "verbose",
            "filetypes": ["c", "cc", "cpp", "cu", "cuda", "objc", "objcpp"],
            "rootPatterns": [
                ".clang",
                ".ccls",
                ".vim/",
                ".git/",
                ".hg/",
                ".clang_complete",
                "compile_commands.json",
                "compile_flags.txt"
            ]
        }
    }
}
